<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .navbar-nav .nav-item .nav-link.active {
            border-bottom: 6px solid rgba(0, 0, 0, 0.1); /* Example: Blue border */
            /* OR */
            box-shadow: 0 2px 64px rgba(0, 0, 0, 0.1);
            /* Example: Light shadow */
            background-color: #007bff /* Light gray background */
            color: #000; /* Text color */
            font-weight: bold; /* Bold text */
            text-decoration: underline;
        }
        }</style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewData["ActiveSection"] as string == "Campuses" ? "active" : "")"
                               asp-area="Admin" asp-controller="Admin" asp-action="Campuses">Campuses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewData["ActiveSection"] as string == "Applications" ? "active" : "")"
                               asp-area="Admin" asp-controller="Form" asp-action="Applications">Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewData["ActiveSection"] as string == "Users" ? "active" : "")"
                               asp-area="Admin" asp-controller="Admin" asp-action="Users">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewData["ActiveSection"] as string == "Notes" ? "active" : "")"
                               asp-area="Admin" asp-controller="Notes" asp-action="Notes">Notes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewData["ActiveSection"] as string == "Notices" ? "active" : "")"
                               asp-area="Admin" asp-controller="Notice" asp-action="Notice">Notices</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(ViewData["ActiveSection"] as string == "Report" ? "active" : "")"
                               asp-area="Admin" asp-controller="Admin" asp-action="Report">Report</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Login">Admin Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
