@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@{
    ViewData["Title"] = "Contact Details";
}
@model DashboardViewModel

<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Arial', sans-serif;
    }
    .container {
        max-width: 900px;
        margin: 30px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }
    h2 {
        color: #007bff;
        text-align: center;
        font-family: 'Georgia', serif;
        margin-top: 20px;
        margin-bottom: 20px;
    }
    .form-label {
        font-weight: bold;
        color: #333;
    }
    .form-control {
        border-radius: 5px;
    }
    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
        border-radius: 5px;
        padding: 10px;
        margin-top: 20px;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 5px;
        padding: 10px 20px;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>

<div class="container">
    <h2>Contact Details</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="District" class="form-label">District</label>
            <input type="text"
                   class="form-control"
                   id="District"
                   name="District"
                   value="@Model.ContactDetails?.District"
            @(Model.ContactDetails?.IsDeanApproved == true ? "readonly" : "")
                   required />
        </div>
        <div class="mb-3">
            <label for="PermanentAddress" class="form-label">Permanent Address</label>
            <input type="text"
                   class="form-control"
                   id="PermanentAddress"
                   name="PermanentAddress"
                   value="@Model.ContactDetails?.PermanentAddress"
            @(Model.ContactDetails?.IsDeanApproved == true ? "readonly" : "")
                   required />
        </div>
        <div class="mb-3">
            <label for="ContactAddress" class="form-label">Contact Address</label>
            <input type="text"
                   class="form-control"
                   id="ContactAddress"
                   name="ContactAddress"
                   value="@Model.ContactDetails?.ContactAddress"
            @(Model.ContactDetails?.IsDeanApproved == true ? "readonly" : "")
                   required />
        </div>
        <div class="mb-3">
            <label for="ContactPhoneNo" class="form-label">Contact Phone No</label>
            <input type="text"
                   class="form-control"
                   id="ContactPhoneNo"
                   name="ContactPhoneNo"
                   value="@Model.ContactDetails?.ContactPhoneNo"
            @(Model.ContactDetails?.IsDeanApproved == true ? "readonly" : "")
                   required />
        </div>
        @* Approval Messages *@
        @if (Model.ContactDetails?.IsApproved == true || Model.ContactDetails?.IsDeanApproved == true)
        {
            <div class="alert alert-success">
                @if (Model.ContactDetails?.IsApproved == true)
                {
                    <p>Approved by College.</p>
                }
                @if (Model.ContactDetails?.IsDeanApproved == true)
                {
                    <p>Approved by Dean.</p>
                }
            </div>
        }
        <button type="submit" class="btn btn-primary" @(Model.ContactDetails?.IsDeanApproved == true ? "disabled" : "")>Save</button>
    </form>
</div>
